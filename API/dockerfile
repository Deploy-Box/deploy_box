# docker run --privileged -v C:/Users/kaleb/.ssh:/root/.ssh -v C:/Users/kaleb/repos/deploy_box/API/key.json:/app/key.json -p 2375:2375 -p 7654:7654 us-central1-docker.pkg.dev/deploy-box/deploy-box-repository/deploy-box-api