# Use Python 3.12 as the base image
FROM python:3.12

# Set the working directory
WORKDIR /app

# Copy application files
COPY . /app

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install required system dependencies
RUN apt-get update && apt-get install -y \
    git \
    apt-transport-https \
    ca-certificates \
    curl \
    gnupg2 \
    lsb-release

# Add Dockerâ€™s official GPG key
RUN curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg

# Add Docker repository manually
RUN echo "deb [arch=amd64 signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/debian $(lsb_release -cs) stable" > /etc/apt/sources.list.d/docker.list

# Update package list again and install Docker
RUN apt-get update && apt-get install -y docker-ce docker-ce-cli containerd.io

# Expose Docker API and Flask port
EXPOSE 2375
EXPOSE 7654

# Set environment variables
ENV FLASK_APP=app.py
ENV FLASK_RUN_HOST=0.0.0.0
ENV FLASK_RUN_PORT=7654
ENV FLASK_ENV=production

# Start Docker daemon and Flask app
CMD ["sh", "-c", "dockerd --host=unix:///var/run/docker.sock & flask run"]

# docker run -d --privileged -p 2375:2375 -p 7654:7654 us-central1-docker.pkg.dev/deploy-box/deploy-box-repository/deploy-box-api